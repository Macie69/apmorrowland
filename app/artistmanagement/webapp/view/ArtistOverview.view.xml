<mvc:View controllerName="apmorrowland.artistmanagement.controller.ArtistOverview"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <headerContent>
            <Button 
                id="addArtistBtn"
                icon="sap-icon://add" 
                text="Nieuwe Artiest" 
                press="onAddArtist" 
                type="Emphasized"/>
        </headerContent>
        <content>
            <Table 
                id="artistsTable"
                items="{/Artists}"
                growing="true"
                growingThreshold="10"
                mode="SingleSelectMaster"
                itemPress="onArtistPress">
                <headerToolbar>
                    <OverflowToolbar id="tableToolbar">
                        <Title id="tableTitle" text="Artiesten"/>
                        <ToolbarSpacer id="toolbarSpacer"/>
                        <SearchField 
                            id="searchField"
                            width="200px" 
                            search="onSearch" 
                            placeholder="Zoek op naam..."/>
                        <Select id="genreFilter" 
                            change="onFilterChange"
                            forceSelection="false">
                            <items>
                                <core:Item id="filterAllGenres" key="" text="Alle Genres"/>
                                <core:Item id="filterEDM" key="EDM" text="EDM"/>
                                <core:Item id="filterTechno" key="Techno" text="Techno"/>
                                <core:Item id="filterTrance" key="Trance" text="Trance"/>
                                <core:Item id="filterDeepHouse" key="Deep House" text="Deep House"/>
                                <core:Item id="filterHardstyle" key="Hardstyle" text="Hardstyle"/>
                            </items>
                        </Select>
                        <Select id="countryFilter" 
                            change="onFilterChange"
                            forceSelection="false">
                            <items>
                                <core:Item id="filterAllCountries" key="" text="Alle Landen"/>
                                <core:Item id="filterBelgium" key="Belgium" text="België"/>
                                <core:Item id="filterNetherlands" key="Netherlands" text="Nederland"/>
                            </items>
                        </Select>
                        <Select id="sortSelect" 
                            change="onSortChange"
                            forceSelection="true">
                            <items>
                                <core:Item id="sortNameAsc" key="name" text="Naam (A-Z)"/>
                                <core:Item id="sortNameDesc" key="nameDesc" text="Naam (Z-A)"/>
                                <core:Item id="sortPopAsc" key="popularity" text="Populariteit ↑"/>
                                <core:Item id="sortPopDesc" key="popularityDesc" text="Populariteit ↓"/>
                            </items>
                        </Select>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="colName">
                        <Text id="colNameText" text="Naam"/>
                    </Column>
                    <Column id="colGenre">
                        <Text id="colGenreText" text="Genre"/>
                    </Column>
                    <Column id="colCountry">
                        <Text id="colCountryText" text="Land"/>
                    </Column>
                    <Column id="colPopularity">
                        <Text id="colPopularityText" text="Populariteit"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="artistListItem" type="Navigation">
                        <cells>
                            <Text id="cellName" text="{name}"/>
                            <Text id="cellGenre" text="{genre}"/>
                            <Text id="cellCountry" text="{country}"/>
                            <ObjectNumber id="cellPopularity" number="{popularity}" unit="/100"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>